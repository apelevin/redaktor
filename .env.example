# Pinecone Configuration
# Получите API ключ на https://app.pinecone.io
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws

# Pinecone Index Names
# Имена ваших индексов в Pinecone
# Для инструкций используйте индекс "instructions" или создайте его
# Для клауз используйте индекс "clauses" или создайте его
# Если у вас один индекс (например, "editor"), используйте его для обоих
PINECONE_INSTRUCTIONS_INDEX=instructions
PINECONE_CLAUSES_INDEX=clauses

# OpenAI Configuration
# Получите API ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenAI Model Configuration (опционально)
# Переопределение моделей для разных шагов пайплайна
# Если не указано, используются значения по умолчанию:
# - question_generation: gpt-5-mini
# - context_completion: gpt-5-nano
# - skeleton_generation: gpt-5.1
# - clause_generation: gpt-5.1

# OPENAI_MODEL_QUESTION_GENERATION=gpt-5-mini
# OPENAI_MODEL_CONTEXT_COMPLETION=gpt-5-nano
# OPENAI_MODEL_SKELETON_GENERATION=gpt-5.1
# OPENAI_MODEL_CLAUSE_GENERATION=gpt-5.1

# Параметры reasoning и verbosity (опционально)
# OPENAI_REASONING_QUESTION_GENERATION=low
# OPENAI_VERBOSITY_QUESTION_GENERATION=medium
